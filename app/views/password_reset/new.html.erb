<h1>Forgot your password?</h1>

<%= form_with url: password_reset_path do |form| %>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "username"%>
  </div>
  <div class="mb-3">
    <%= form.submit "Reset Password", class: "btn btn-primary"%>
  </div>
<% end %>
