<p id="notice"><%= notice %></p>

<h1>Tam Trus</h1>

<table>
  <thead>
    <tr>
      <th>Nguoi dan</th>
      <th>Tu ngay</th>
      <th>Den ngay</th>
      <th>Dia chi</th>
      <th>Li do</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tam_trus.each do |tam_tru| %>
      <tr>
        <td><%= tam_tru.nguoi_dan_id %></td>
        <td><%= tam_tru.tu_ngay %></td>
        <td><%= tam_tru.den_ngay %></td>
        <td><%= tam_tru.dia_chi %></td>
        <td><%= tam_tru.li_do %></td>
        <td><%= link_to 'Show', tam_tru %></td>
        <td><%= link_to 'Edit', edit_tam_tru_path(tam_tru) %></td>
        <td><%= link_to 'Destroy', tam_tru, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

