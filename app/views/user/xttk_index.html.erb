
<h1>Xac thuc tai khoan</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Họ và tên</th>
      <th>Email</th>
      <th>SDT</th>
      <th>Địa chỉ</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.ho_va_ten %></td>
        <td><%= user.email %></td>
        <td><%= user.sdt %></td>
        <td><%= user.dia_chi %></td>
        <td style='max-width: 50px'><%= link_to 'Cho phep', xttk_accept_path(user), method: :patch, class: 'btn btn-sm btn-outline-success' %></td>
        <td style='max-width: 50px'><%= link_to 'Từ chối', xttk_reject_path(user), method: :delete, class: 'btn btn-sm btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
